#include <stdio.h>

#define PI 3.14159

int main() {
    float radius, area;

    // Ask the user to input the radius of the circle
    printf("Enter the radius of the circle: ");
    scanf("%f", &radius);

    // Calculate the area of the circle
    area = PI * radius * radius;

    // Display the result
    printf("The area of the circle is: %.2f square units\n", area);

    return 0;
}
